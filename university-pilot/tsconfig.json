{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs", // Zmieniono z "esnext" dla lepszej współpracy z Jest
    "moduleResolution": "node", // Zmieniono z "bundler", aby uniknąć problemów z testami
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Zmieniono z "preserve" dla kompatybilności z narzędziami testowymi
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "__tests__/**/*.ts", // Dodano folder testów
    "__tests__/**/*.tsx"
  ],
  "exclude": ["node_modules", "e2e"] // Wykluczono testy e2e dla Playwright
}
